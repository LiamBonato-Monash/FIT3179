{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 150,
  "width": 360,
  "data": {
      "url": "https://raw.githubusercontent.com/LiamBonato-Monash/FIT3179/Data-Visualisation-2/datasets/ausData.csv"
  },
  "title": {"text": "Australia",
            "orient":"top"},
  
  "mark": "rect",
  "encoding": {
      "x": {
          "field": "year",
          "type": "ordinal",
          "title": "Year",
          "axis": {
              "labelAngle": 45
          }
      },
      "y": {
          "field": "age",
          "type": "nominal",
          "sort": ["75+ years","55-74 years","35-54 years", "25-34 years", "15-24 years", "5-14 years"],
          "title": "Age"
      },
      "color": {
          "field": "suicide_rate",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [6,9,12,15,18],
            "range": [
              "#eff3ff",
              "#c6dbef",
              "#9ecae1",
              "#6baed6",
              "#3182bd",
              "#08519c"
            ]
          },
          "legend": {
            "title": "Suicide Rate",
            "orient": "bottom",
            "direction": "horizontal",
            "strokeColor": "black",
            "fillColor": "white",
            "padding": 3

          }
      },
      "tooltip":[
        {"field": "suicide_rate", "title": "Suicide Rate", "format": ",.2r"},
        {"field": "age", "title": "Age Group"}
      ]
      
  },
  "transform": [{"filter": {"field": "year", "lt": 2017 }}],
  "config": {
    "background":"#DFFFD6",
    "font": "sulphur",
      "view": {
          "strokeWidth": 0,
          "step": 13
      },
      "axis": {
          "domain": false
      }

  }
}

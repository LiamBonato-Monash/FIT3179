{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 300,
  "height": 425,
  "data": {
    "url": "https://raw.githubusercontent.com/LiamBonato-Monash/FIT3179/Data-Visualisation-2/datasets/rate_vs_gdp_with_cont.csv"
  },
  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true,
        "opacity": 0.8,
        "size": 40
      },
      "params": [
        {
            "name": "selection",
            "select": {"type": "point", "fields": ["continent"]},
            "bind": "legend"
        },
        {
          "name": "grid",
          "select": "interval",
          "bind": "scales"
        }
      ],
      "encoding": {
        "x": {"field": "gdp", "type": "quantitative"},
        "y": {"field": "suicide_rate", "type": "quantitative"},
        "color": {
          "field": "continent",
          "scale": {
            "type": "ordinal",
            "range": ["#6a42a1", "#ba4dd1", "#fac64d", "#ffee6e", "#318ff7", "#1b39f2"]
          },
          "legend": {"title": "Continents"}
        },
        "opacity": {"condition": {"param": "selection", "value": 1}, "value": 0.2},
        "tooltip": [
          {"field": "country", "title": "Country"},
          {"field": "continent", "title": "Continent"},
          {
            "field": "suicide_rate",
            "title": "Suicide Rate",
            "format": ",.3r"
          },
          {
            "field": "gdp",
            "title": "GDP Per Capita",
            "format": ",.3r"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "strokeDash": [6,4]
      },
      "encoding": {
        "y": {
          "field": "suicide_rate",
          "type": "quantitative",
          "aggregate": "mean",
          "title": "Suicide Rate"
        }
      }
    },
    {
      "mark": {
        "type": "rule",
        "strokeDash": [6,4]
      },
      "encoding": {
        "x": {
          "field": "gdp",
          "type": "quantitative",
          "aggregate": "mean",
          "title": "GDP Per Capita ($USD)"
        }
      }
    }
  ],
  "config": {
    "font": "sulphur",
    "background":"#f8f8f8"
  }
}